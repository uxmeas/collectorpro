# CollectorPRO Production Environment Configuration
# Multi-Platform Sports Digital Collectibles Collection Manager

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL="postgresql://username:password@host:port/database_name"
DIRECT_URL="postgresql://username:password@host:port/database_name"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL="https://your-domain.com"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-here"

# =============================================================================
# NBA TOPSHOT INTEGRATION
# =============================================================================
# Dapper Labs NBA TopShot API
TOPSHOT_API_URL="https://api.nbatopshot.com"
TOPSHOT_API_KEY="your-topshot-api-key"
TOPSHOT_CLIENT_ID="your-topshot-client-id"
TOPSHOT_CLIENT_SECRET="your-topshot-client-secret"

# NBA TopShot OAuth
TOPSHOT_OAUTH_REDIRECT_URI="https://your-domain.com/api/dapper/oauth/callback"

# =============================================================================
# PANINI NFT INTEGRATION
# =============================================================================
# Panini America NFT API
PANINI_API_URL="https://api.panini.com/nft"
PANINI_API_KEY="your-panini-api-key"
PANINI_CLIENT_ID="your-panini-client-id"
PANINI_CLIENT_SECRET="your-panini-client-secret"

# Panini OAuth
PANINI_OAUTH_REDIRECT_URI="https://your-domain.com/api/panini/oauth/callback"

# =============================================================================
# NFL ALL DAY INTEGRATION
# =============================================================================
# Dapper Labs NFL All Day API
NFL_ALLDAY_API_URL="https://api.nflallday.com"
NFL_ALLDAY_API_KEY="your-nfl-allday-api-key"
NFL_ALLDAY_CLIENT_ID="your-nfl-allday-client-id"
NFL_ALLDAY_CLIENT_SECRET="your-nfl-allday-client-secret"

# NFL All Day OAuth
NFL_ALLDAY_OAUTH_REDIRECT_URI="https://your-domain.com/api/nfl-allday/oauth/callback"

# =============================================================================
# FLOW BLOCKCHAIN CONFIGURATION
# =============================================================================
# Flow Blockchain Access Node
FLOW_ACCESS_NODE_URL="https://access-mainnet-beta.onflow.org"
FLOW_NETWORK="mainnet"

# Flow Service Account
FLOW_SERVICE_ACCOUNT_ADDRESS="your-flow-service-account"
FLOW_SERVICE_ACCOUNT_PRIVATE_KEY="your-flow-private-key"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"

# Email Templates
EMAIL_FROM="noreply@your-domain.com"
EMAIL_REPLY_TO="support@your-domain.com"

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY="sk_live_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# Subscription Plans
STRIPE_PRO_PLAN_PRICE_ID="price_your-pro-plan-id"
STRIPE_FREE_PLAN_PRICE_ID="price_your-free-plan-id"

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# PostHog Analytics
NEXT_PUBLIC_POSTHOG_KEY="phc_your-posthog-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/project-id"

# =============================================================================
# CDN & ASSET OPTIMIZATION
# =============================================================================
# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAIN="your-cdn-domain.com"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Platform Feature Flags
NEXT_PUBLIC_ENABLE_TOPSHOT="true"
NEXT_PUBLIC_ENABLE_PANINI="true"
NEXT_PUBLIC_ENABLE_NFL_ALLDAY="true"
NEXT_PUBLIC_ENABLE_SOCCER_PLATFORM="false"
NEXT_PUBLIC_ENABLE_HOCKEY_PLATFORM="false"

# Beta Features
NEXT_PUBLIC_ENABLE_BETA_PRICING="true"
NEXT_PUBLIC_ENABLE_CROSS_PLATFORM_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_PLATFORM_COMPARISON="true"

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
# Redis Configuration (for caching)
REDIS_URL="redis://username:password@host:port"

# Cache Configuration
CACHE_TTL_SECONDS="3600"
API_RATE_LIMIT_PER_MINUTE="100"

# =============================================================================
# SECURITY & COMPLIANCE
# =============================================================================
# CORS Configuration
NEXT_PUBLIC_ALLOWED_ORIGINS="https://your-domain.com,https://www.your-domain.com"

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE="your-csp-nonce"

# =============================================================================
# DEPLOYMENT & ENVIRONMENT
# =============================================================================
# Environment
NODE_ENV="production"
NEXT_PUBLIC_ENVIRONMENT="production"

# Build Configuration
NEXT_PUBLIC_APP_VERSION="10.1.0"
NEXT_PUBLIC_BUILD_ID="$(date +%s)"

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# Health Check
HEALTH_CHECK_ENDPOINT="/api/health"
HEALTH_CHECK_TIMEOUT="5000"

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Database Backup
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS="30"

# =============================================================================
# LEGAL & COMPLIANCE
# =============================================================================
# Terms of Service
NEXT_PUBLIC_TERMS_URL="https://your-domain.com/terms"
NEXT_PUBLIC_PRIVACY_URL="https://your-domain.com/privacy"

# Support Information
NEXT_PUBLIC_SUPPORT_EMAIL="support@your-domain.com"
NEXT_PUBLIC_SUPPORT_DISCORD="https://discord.gg/your-invite"

# =============================================================================
# SOCIAL PROOF & MARKETING
# =============================================================================
# Social Media
NEXT_PUBLIC_TWITTER_HANDLE="@collectorpro"
NEXT_PUBLIC_DISCORD_INVITE="https://discord.gg/collectorpro"

# Community Stats
NEXT_PUBLIC_TOTAL_COLLECTORS="1247"
NEXT_PUBLIC_PLATFORMS_SUPPORTED="5"
NEXT_PUBLIC_FEATURED_IN="Sports Discord"

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
# Debug Mode (disable in production)
DEBUG="false"
NEXT_PUBLIC_DEBUG_MODE="false"

# API Mocking (disable in production)
NEXT_PUBLIC_MOCK_API="false"
NEXT_PUBLIC_MOCK_PLATFORMS="false" 